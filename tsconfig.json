{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",          
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                    
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "composite": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests", "dist", "idl"]
}
